<nav>
	<span><a title="homepage" href="/">~ home ~</a></span>
	<% if (user) { %>
		<span><a title="post" href="/post">~ post ~</a></span>
		<span><a title="logout" href="/logout">~ logout ~</a></span>
	<% } else { %>
		<span><a title="login" href="/login">~ login ~</a></span>
		<span><a title="register" href="/reg">~ register ~</a></span>
	<% } %>
</nav>

		<p>
				<%- post.post %>
				<p class="info">
						<i class="fas fa-glasses"></i> Read: <%= post.pv %> | 
						<i class="far fa-comment-dots"></i> Comment : <%= post.comments.length %> | 
						<i class="fas fa-retweet"></i> Share:
						<% if (post.reprint_info.reprint_to) { %>
								<%= post.reprint_info.reprint_to.length %>
						<% } else { %>
								<%= 0 %>
						<% } %>
				</p>
		</p>

				<p class="info">
				<a href="/u/<%= post.name %>"><img src="<%= post.head %>" class="r_head" /></a>  | 

				User:
						<a href="/u/<%= post.name %>"><%= post.name %></a> | 
				Date: 
						<%= post.time.minute %> | 
				Tag:
						<% post.tags.forEach(function (tag, index) { %>
								<% if (tag) { %>
										<a class="tag" href="/tags/<%= tag %>"><%= tag %></a>
								<% } %>
						<% }) %>
				<% if (post.reprint_info.reprint_from) { %>
						<br>
						<a href="/u/<%= post.reprint_info.reprint_from.name %>/<%= post.reprint_info.reprint_from.day %>/<%= post.reprint_info.reprint_from.title %>">Original post</a>
				<% } %>
		</p>



